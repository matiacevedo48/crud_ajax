<p id="notice"><%= notice %></p>

<h1>Posts with Ajax</h1>

<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <%= form_tag(posts_path, method: "get", remote: true, :class => "form-inline") do  %>
        <%= text_field_tag :search, params[:search], placeholder:"Post Search", :class =>"form-control" %>
        <%= submit_tag "Search", class:"btn btn-primary"%>
      <% end %>
    </div>
    <%= form_with(model: @post) do |form| %>
      <div class="col-3">
        <div class="field">
          <%= form.text_field :title, placeholder:"Post Title" %>
          <%= form.text_field :content, placeholder: "Post Content" %>  
        </div>
        <div class="col-3">
          <div class="actions">
            <%= form.submit "Create new Post", class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="container mt-4">
      <div class="row" id="container_posts">
        <%= render @posts %>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalShowPost" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header bg-success text-white">
          <h2 class="modal-title text-white">View Post</h2>
          <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <h3 id="modal_post_title"></h3>
          </div>
          <div class="form-group">
            <i id="modal_post_content"></i>
          </div>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <i id="modal_post_created_at" class="float-right"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



